# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# TiDB Database Configuration
TIDB_HOST=gateway01.ap-northeast-1.prod.aws.tidbcloud.com
TIDB_PORT=4000
TIDB_USER=your_username.root
TIDB_PASSWORD=your_password
TIDB_DATABASE=scaenahub_v2
# TIDB_SSL_CA=path/to/ca-cert.pem (optional, uses default SSL if not specified)

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_refresh_secret_key_here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
REGISTRATION_KEY=your_registration_key_here

# Google Services
GOOGLE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project"}
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id

# App Settings
MAX_FILE_SIZE=5242880
MAX_MESSAGE_LENGTH=2000
CACHE_SIZE_MB=100
SYNC_INTERVAL_MS=5000

# Rate Limiting
RATE_LIMIT_MESSAGES=20
RATE_LIMIT_FILES=3
RATE_LIMIT_API=60
RATE_LIMIT_AUTH=5

# Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=info